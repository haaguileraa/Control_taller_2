%Octave
%graphics_toolkit("gnuplot");
%pkg load  control
%pkg load symbolic
% diseño del controlador para el levitador por el lugar de las raices

tao = 0.1
K= 1
p1 = 4.85
%%

s=tf('s')

Num_prac = 0.68975;
Den_prac = s*(s*s*0.01524+s*0.2732+1);

lev= Num_prac/Den_prac;


G = tf(lev)


% diseño del controlador
k=6
z1=-0.3
z2=-5
p1=0
p2=-40
p= [p1 p2]
z = [z1 z2]

C = zpk([z],[p],k);
L1=C*G;
T=feedback(L1,1)
plc=pole(T);

tam_step =  0.05; % m
volt=12;

U=(C*tam_step*volt)/(1+C*G);



% plot de la region de diseno
delete(gcf)
figure(1)
rlocus(L1)

for i =1 : length(plc)
  line(real(plc(i)), imag(plc(i)),  'marker','square', 'color','r', 'markersize', 8)
end


figure(2)
step(U)
title('Time Response U')
grid on


figure(3)
step(T)
title('Time Response T')
grid on
